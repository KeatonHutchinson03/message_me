<!DOCTYPE html>
<html>
  <head>
    <title>MessageMe</title>
    <%= favicon_link_tag 'favicon-3 (dragged).tiff' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="ui small inverted menu">
      <div class="ui container">
        <a class="active item">
          <%= link_to "Chatroom", root_path, class: "item" %>
        </a>
        <a class="item">
          Messages
        </a>
        <div class="right menu">
          <div class="ui dropdown item">
            Account <i class="dropdown icon"></i>
            <div class="menu">
              <a class="item">Log out</a>
              <a class="item">Log in</a>
              <a class="item">Sign up</a>
            </div>
          </div>
          <div class="item">
              <%= link_to "Sign Up", login_path, class: "ui inverted orange button item" %>
          </div>
        </div>
      </div>
    </div>
    <div class="ui container">
      <%= yield %>
    </div>
  </body>
</html>
